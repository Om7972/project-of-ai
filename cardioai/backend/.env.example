# ============================================================
#  CardioAI Hospital System — Backend Environment Variables
#  Copy this file to .env and fill in real values.
# ============================================================

# ── Database ─────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://cardioai_user:cardioai_password@db:5432/cardioai_db
DATABASE_URL_SYNC=postgresql://cardioai_user:cardioai_password@db:5432/cardioai_db

# ── Security ─────────────────────────────────────────────────
# Generate a strong key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-random-32-char-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ── CORS ─────────────────────────────────────────────────────
# Comma-separated list of allowed frontend origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ── ML Model (relative to backend working directory) ─────────
MODEL_PATH=ml/advanced_heart_model.pkl
SCALER_PATH=ml/advanced_scaler.pkl

# ── App ──────────────────────────────────────────────────────
APP_NAME=CardioAI Hospital System
APP_VERSION=1.0.0
DEBUG=False
